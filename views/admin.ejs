<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Configuration</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Configuration Panel</h1>
            <a href="/admin/dashboard" class="button-secondary">View Dashboard</a>
        </div>
        
        <div class="card">
            <h2>Add New SaaS Client</h2>
            <form action="/admin/clients" method="POST">
                <div class="form-group">
                    <label for="clientName">Client Name (e.g., MySaaS)</label>
                    <input type="text" id="clientName" name="name" required>
                </div>
                <button type="submit">Create Client & Generate API Key</button>
            </form>
        </div>

        <div class="card">
            <h2>Existing Clients</h2>
            <table>
                <thead>
                    <tr>
                        <th>Client Name</th>
                        <th>API Key</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% clients.forEach(client => { %>
                        <tr>
                            <td><%= client.name %></td>
                            <td><code><%= client.apiKey %></code></td>
                            <td><a href="/admin/clients/<%= client.id %>" class="button-secondary">Manage</a></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
