<%- include('partials/header', {title: 'Client Configuration'}) %>

<div class="header">
    <h1>Clients</h1>
    <a href="/admin/dashboard" class="button-secondary">View Dashboard</a>
</div>

<div class="card">
    <h2>Add New SaaS Client</h2>
    <form action="/admin/clients" method="POST">
        <div class="form-group">
            <label for="clientName">Client Name (e.g., MySaaS)</label>
            <input type="text" id="clientName" name="name" required>
        </div>
        <button type="submit">Create Client & Generate API Key</button>
    </form>
</div>

<div class="card">
    <h2>Existing Clients</h2>
    <table>
        <thead>
            <tr>
                <th>Client Name</th>
                <th>API Key</th>
                <th class="actions-column">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% clients.forEach(client => { %>
                <tr>
                    <td><%= client.name %></td>
                    <td><code><%= client.apiKey %></code></td>
                    <td class="actions-cell">
                        <a href="/admin/clients/<%= client.id %>" class="button-secondary">Manage</a>
                        <form action="/admin/clients/<%= client.id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this client and all its data?');">
                            <button type="submit" class="button-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer') %>
